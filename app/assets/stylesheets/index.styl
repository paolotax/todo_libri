@import './mixin'
@import './theme'

.stack
  position: relative
  
  > *:not(.active)
    display: none
    
body, html
  margin: 0;
  padding: 0;
  width: 100%
  height: 100%

body
  vbox()

header#header
  overflow: hidden;
  height: 50px;
  border-box()
  inset-box-shadow(0px, -1px, 3px, #1d1d1d)
  vbg-gradient( #474747, #303030)

header#header h1
  line-height: 50px;
  float: left;
  padding: 0 20px;
  font-size: 18px;
  margin: 0;
  color: #FFF;
  border-right: 1px solid #181818;
  box-shadow(1px, 0px, 1px, #525252)
  text-shadow: 0 -1px 1px black;
  font-weight: bold;

#app
  box-flex(1)
  vbox()

#app .libri
  box-flex(1)
  hbox()
  
  .sidebar
    width: 300px;
    vbox()
    
    header
      padding: 6px 7px 5px 7px;
      border: 1px solid #c5c5c5;
      border-width: 1px 0 1px 0;
      background: #ffffff;
      vbg-gradient(#ffffff, #dedfe0)

      input
        font-size: 30px;
        width: 100%;    
        
    .items
      box-flex(1)
      overflow-y: scroll
    
    .item
      height: 50px
      padding: 0 15px
      line-height: 50px
      
      border-bottom: 1px solid #d2d2d1;
      color: #333;
      ellipsis()
      
      &.active
        color: #ffffff;
        text-shadow: 0 -1px 1px #46677f;
        vbg-gradient( #7bb5db, #4775b8)
        border-bottom-color: #609fd0;
        inset-box-shadow(0, 2px, 2px, #4775b8)
        
    footer
      padding: 6px;
      border-top: 1px solid #c5c5c5;
      vbg-gradient(#ffffff, #dedfe0)
      box-shadow(0, -1px, 2px, rgba(0, 0, 0, 0.1))
      text-align: right;
  
  .main
    vbox()
    box-flex(1)
    
    header
      color: #333333;
      font-weight: bold;
      text-shadow: 0 1px 1px #ffffff;
      font-size: 14px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.3);
      vbg-gradient(#ffffff, #e0e0e1)
      box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.1))
      overflow: hidden
      
      a
        float: left;
        line-height: 30px;
        height: 30px;
        padding: 0 20px;
        cursor: pointer;
        border-right: 1px solid rgba(0, 0, 0, 0.3);
        text-decoration: none
        
        &:active
          background: #dadada;
          inset-box-shadow(0, 0, 10px, #9c9c9c)
    
    .content
      box-flex(1)
      inset-box-shadow(1px, 2px, 2px, rgba(0, 0, 0, 0.1))
      padding: 20px;
      -webkit-user-select: text;
      input
        width: 100%
        padding-right: 20px
      .titolo
        padding-right: 20px
      .prezzi
        hbox()
        > label
          box-flex(1)
          padding-right: 20px
          input
            text-align: right;
      
      .codici, .settore
        hbox()
        padding-right: 20px
        select
          width 100%
        > label:first-child
          width 40%
          padding-right: 20px
        > label:nth-child(2)
          box-flex(1)
          padding-right: 20px
      
      .copertina
        hbox()
        > label
          padding-right 20px
        > label:nth-child(2)
          box-flex(1)

select
  -webkit-appearance: button;
  -webkit-border-radius: 20px;
  -webkit-box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
  -webkit-padding-end: 20px;
  -webkit-padding-start: 2px;
  -webkit-user-select: none;
  background-image: url(../images/select-arrow.png), -webkit-gradient(linear, left top, left bottom, from(#e6e6e7), color-stop(0.3, #fafafa), to(#fafafa));
  background-position: center right;
  background-repeat: no-repeat;
  border: 1px solid #9e9fa2;
  color: #363636;
  font-size: 17px;
  margin: 0;
  margin-bottom 18px
  overflow: hidden;
  padding-top: 5px;
  padding-bottom: 5px;
  text-overflow: ellipsis;
  white-space: nowrap;
  vbg-gradient(#e6e6e7, #fafafa)


